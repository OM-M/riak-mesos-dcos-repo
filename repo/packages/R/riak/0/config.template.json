{
    "type": "object",
    "properties": {
        "riak": {
            "type": "object",
            "depscription": "Riak Mesos Framework specific properties",
            "properties": {
                "framework-name": {
                    "type": "string",
                    "description": "Framework Instance Name.",
                    "default": "riak"
                },
                "hostname": {
                    "default": "riak.mesos",
                    "type": "string",
                    "description": "Framework HTTP API hostname."
                },
                "marathon": {
                    "type": "string",
                    "description": "The Marathon URL.",
                    "default": "marathon.mesos:8080"
                },
                "master": {
                    "type": "string",
                    "description": "The URL of the Mesos master. The format is zk://host1:port/mesos.",
                    "default": "zk://leader.mesos:2181/mesos"
                },
                "zk": {
                    "type": "string",
                    "description": "Zookeeper address. Specify in the format host:port.",
                    "default": "leader.mesos:2181"
                },
                "user": {
                    "type": "string",
                    "description": "Framework User.",
                    "default": "root"
                },
                "role": {
                    "type": "string",
                    "description": "Framework Role.",
                    "default": "riak"
                },
                "auth-principal": {
                    "type": "string",
                    "description": "Mesos authentication principal.",
                    "default": ""
                },
                "auth-provider": {
                    "type": "string",
                    "description": "Mesos authentication provider.",
                    "default": ""
                },
                "auth-secret-file": {
                    "type": "string",
                    "description": "Mesos authentication secret file.",
                    "default": ""
                },
                "instances": {
                    "type": "number",
                    "description": "Number of framework instances",
                    "default": 1
                },
                "healthcheck-grace-period-seconds": {
                    "type": "number",
                    "description": "Memory requirements",
                    "default": 300
                },
                "healthcheck-interval-seconds": {
                    "type": "number",
                    "description": "Memory requirements",
                    "default": 60
                },
                "healthcheck-timeout-seconds": {
                    "type": "number",
                    "description": "Memory requirements",
                    "default": 20
                },
                "healthcheck-max-consecutive-failures": {
                    "type": "number",
                    "description": "Memory requirements",
                    "default": 5
                },
                "scheduler": {
                    "type": "object",
                    "depscription": "Requirements for Riak Mesos Scheduler",
                    "properties": {
                        "url": {
                            "type": "string",
                            "description": "Package location for Riak Mesos Scheduler tarball.",
                            "default": "{{scheduler_url}}"
                        },
                        "cpus": {
                            "type": "number",
                            "description": "Riak Mesos Scheduler CPU requirements",
                            "default": 0.5
                        },
                        "mem": {
                            "type": "number",
                            "description": "Riak Mesos Scheduler Memory requirements",
                            "default": 2048
                        }
                    }
                },
                "executor": {
                    "type": "object",
                    "depscription": "Requirements for Riak Mesos Executor",
                    "properties": {
                        "url": {
                            "type": "string",
                            "description": "Package location for Riak Mesos Executor tarball.",
                            "default": "{{executor_url}}"
                        },
                        "cpus": {
                            "type": "number",
                            "description": "Riak Mesos Executor CPU requirements",
                            "default": 0.1
                        },
                        "mem": {
                            "type": "number",
                            "description": "Riak Mesos Executor Memory requirements",
                            "default": 512
                        }
                    }
                },
                "node": {
                    "type": "object",
                    "depscription": "Requirements for Riak",
                    "properties": {
                        "url": {
                            "type": "string",
                            "description": "Package location for Riak tarball.",
                            "default": "{{node_url}}"
                        },
                        "patches-url": {
                            "type": "string",
                            "description": "Package location for Riak patches tarball.",
                            "default": "{{explorer_url}}"
                        },
                        "cpus": {
                            "type": "number",
                            "description": "Riak CPU requirements",
                            "default": 1.0
                        },
                        "mem": {
                            "type": "number",
                            "description": "Riak Memory requirements",
                            "default": 8000
                        },
                        "disk": {
                            "type": "number",
                            "description": "Riak Disk requirements",
                            "default": 20000
                        }
                    }
                },
                "proxy": {
                    "type": "object",
                    "depscription": "Requirements for Riak Proxy",
                    "properties": {
                        "url": {
                            "type": "string",
                            "description": "Package location for Riak Proxy tarball.",
                            "default": "{{proxy_url}}"
                        },
                        "use-public": {
                            "type": "boolean",
                            "description": "When true, only deploys proxy on public agents.",
                            "default": false
                        },
                        "cpus": {
                            "type": "number",
                            "description": "Riak Proxy CPU requirements",
                            "default": 0.5
                        },
                        "mem": {
                            "type": "number",
                            "description": "Riak Proxy Memory requirements",
                            "default": 1024
                        }
                    }
                }
            },
            "required": [
                "framework-name",
                "hostname",
                "marathon",
                "master",
                "zk",
                "user",
                "role",
                "auth-principal",
                "instances",
                "healthcheck-grace-period-seconds",
                "healthcheck-interval-seconds",
                "healthcheck-timeout-seconds",
                "healthcheck-max-consecutive-failures",
                "scheduler",
                "executor",
                "node",
                "proxy"
            ]
        }
    }
}
